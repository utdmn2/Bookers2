<div class="container">
 <div class="row">

  <%= render 'users/sidebar', book: @book, user: @user %>

  <div class="col-md-8 offset-md-1">
   <h2>Books</h2>
    <table>
     <% @books.each do |book| %>
      <tr>
       <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
       <td><%= link_to book.title,book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>
     <% end %>
    </table>
   </div>
  </div>
</div>