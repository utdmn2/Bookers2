<h2>User info</h2>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table>
    <tbody>
      <tr></tr>
      <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
      <tr>
       <th>intoroduction</th>
       <!--<th><%#= @user.introduction %></th>-->
      </tr>
    </tbody>
  </table>

<h1>New book</h1>
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<h2>Book detail</h2>
<% @books.each do |book| %>
 <div>

   <p><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
   <p><%= book.user.name %></p>
   <p>Title：<%= link_to "book.title",book_path(book.id) %></p>
   <p>Opinion：<%= book.body %></p>

   </div>
<% end %>

