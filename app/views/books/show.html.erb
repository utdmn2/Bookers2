<p id="notice">
  <%= notice %> </p>

<h1>Book detail</h1>
<table>
  <tr>
   
  <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
  <td><%= @book.title %></td>
  <td><%= @book.body %></td>
  
  <% if @book.user == current_user %>
   <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
   <td><%= link_to "Destroy", book_path(@book.id),method: :delete, "data-confirm" => "本当に消しますか?" %></td>
  <% end %>
 </tr>
</table>