<%= render 'users/sidebar' %>

<h1>Books</h1>
<table>
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>

 <tbody>

    <% @books.each do |book| %>
 <tr>
   <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
   <td><p><%= link_to book.title,book_path(book.id) %></p></td>
   <td><p><%= book.body %></p></td>
 </tr>
    <% end %>
 </tbody>
</table>