<h2>Follow Users</h2>
<% if @users.exists? %>
<table>
  <thead>
    <tr>
      <th scope="col">image</th>
      <th scope="col">name</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="col"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td scope="col">フォロー数: <%= user.followings.count %></td>
        <td scope="col">フォロワー数: <%= user.followers.count %></td>
        <td scope="col"><%= link_to "Show",user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>